// Assignment 8
// Write a function that takes a new object as input which has name age and gender
// and greets the user with their gender (Hi Mr/Mrs/Others harkirat, your age is 21)

function greetingUser(sampleUser) {
    console.log(`Hi Mr/Mrs/Other ${sampleUser.name}, your age is ${sampleUser.age}`);
    if (sampleUser.age >= 18) {
        console.log("Yes, you are legal to vote");
    } else {
        console.log('No, you are not legal to vote');
    }
}
